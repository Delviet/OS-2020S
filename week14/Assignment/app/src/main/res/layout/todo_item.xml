<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_vertical">

    <TextView
            android:id="@+id/task_title"
            android:text="Hello"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            tools:ignore="MissingConstraints,NotSibling"
            app:layout_constraintBottom_toBottomOf="@+id/task_title"
            app:layout_constraintTop_toTopOf="@+id/task_title" app:layout_constraintEnd_toStartOf="@+id/task_title"
            app:layout_constraintStart_toStartOf="parent" android:layout_width="wrap_content"/>
    <Button
            android:id = "@+id/task_title"
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="deleteTask"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY = "0dp"
            tools:ignore="DuplicateIds,MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>